<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PracticeFragment"
    android:background="@drawable/whitebackground">

    <Button
        android:id="@+id/fragpractice_btn_start"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragpractice_spn_amount"
        android:layout_centerInParent="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/button"
        android:text="@string/start_quiz"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/fragpractice_tv_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="81dp"
        android:text="Category" />

    <TextView
        android:id="@+id/fragpractice_tv_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        android:text="Difficulty" />

    <TextView
        android:id="@+id/fragpractice_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="213dp"
        android:text="Amount" />

    <Spinner
        android:id="@+id/fragpractice_spn_difficulty"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/fragpractice_tv_difficulty"
        android:drawSelectorOnTop="true"
        android:entries="@array/difficulty_array" />

    <Spinner
        android:id="@+id/fragpractice_spn_category"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/fragpractice_tv_cat"
        android:drawSelectorOnTop="true"
        android:entries="@array/category_array" />

    <Spinner
        android:id="@+id/fragpractice_spn_amount"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/fragpractice_tv_amount"
        android:drawSelectorOnTop="true" />

</RelativeLayout>