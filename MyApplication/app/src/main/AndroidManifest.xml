<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dcris.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_quiz"
        android:label="Quizrific"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".MenuProfActivity"  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".PracticeActivity" />
        <activity android:name=".QuizCreatorActivity" />
        <activity android:name=".QuestionsActivity" />
        <activity android:name=".ChallengeActivity" />
        <activity android:name=".StatsViewerActivity" />
        <activity android:name=".BarActivity" android:screenOrientation="landscape" />
        <activity android:name=".SchedulerActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".QuizTakingActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".StudentStatsActivity" />
        <activity android:name=".StudentLineChartActivity" />
        <activity android:name=".ResultsActivity" />
    </application>

</manifest>